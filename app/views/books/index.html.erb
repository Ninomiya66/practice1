<h1>Books</h1>

<table>
    
    <thead>
        
        <tr>
            
            <th>Title</th>
            
            <th>Body</th>
            
            <th></th>
            
        </tr>
        
    </thead>
    
    <tbody>
        
        <% @books.each do |book| %>
        
        <tr>
            
            <td><%= book.title %></td>
            
            <td><% book.body %></td>
            <!--show-->
            <td></td>
            <!--edit-->
            <td></td>
            <!--destroy-->
            <td></td>
            
        </tr>
        
        <% end %>
        
    </tbody>
    
</table>

<h2>New book</h2>

<%= if @book.errors.any? %>

<ul>
    
    <% @book.errors.full_messages.each do |message| %>
    
     <li><%= message %></li>
     
    <% end %>
    
</ul>

<% end %>

<%= form_with model: @book, url: '/books', method :post do |f| %>

 <%= f.label :Title %>

 <%= f.text_field :title %>

 <%= f.label :Body %>

 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

<% end %>
